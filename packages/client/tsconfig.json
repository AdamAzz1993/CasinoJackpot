{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleDetection": "force",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@interfaces/*": ["interfaces/*"],
      "@views/*": ["views/*"],
      "@constants/*": ["constants/*"],
      "@modules/*": ["modules/*"],
      "@enums/*": ["enums/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
